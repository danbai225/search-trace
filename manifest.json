{
    "manifest_version": 3,
    "name": "search-trace",
    "version": "1.0",
    "action": {
        "default_title": "Click to view a popup",
        "default_popup": "popup.html"
    },
    "description": "A plain text description",
    "author": "DanBai",
    "background": { 
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "jquery.min.js",
                "content-script.js"
            ]
        }
    ],
    
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "spin.html",
    "options_ui": {
        "page": "spin.html"
    }
}