{
    "manifest_version": 3,
    "name": "search-trace",
    "version": "1.0",
    "action": {
        "default_title": "寻迹-从这里开始",
        "default_popup": "popup/popup.html"
    },
    "description": "寻迹-从这里开始",
    "author": "DanBai",
    "background": { 
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": [
                "content/content-script.js"
            ]
        }
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "options_page": "setting/setting.html",
    "options_ui": {
        "page": "setting/setting.html"
    },
    "permissions": [
        "storage"
      ]
}